{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "rootDir": "./lib",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "declaration": true,
        "declarationDir": "dist/types",
        "jsx": "react-jsx",
        "outDir": "./dist",
        "removeComments": true
    },
    "include": ["./lib/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "lib/__tests__/__mocks__"]
}